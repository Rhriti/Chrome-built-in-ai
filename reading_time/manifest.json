{
    "manifest_version": 3,
    "name": "Reading time",
    "version": "1.0",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "icons": {
    "16": "images/images/icon-16.png",
    "32": "images/images/icon-32.png",
    "48": "images/images/icon-48.png",
    "128": "images/images/icon-128.png"
  },
  "content_scripts": [
  {
    "js": ["scripts/content.js"],
    "matches": ["<all_urls>"],
    "run_at": "document_idle"
  }
]

  }